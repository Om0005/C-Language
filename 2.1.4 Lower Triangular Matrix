#include <stdio.h>

int main() {
    int m, n;
    int matrix[10][10];
    int i, j, flag = 1;

    // Input for number of rows and columns
    printf("Enter no of rows, columns: ");
    scanf("%d %d", &m, &n);

    // Check if matrix is square
    if (m != n) {
        printf("Enter elements of matrix:\n");
        for (i = 0; i < m; i++) {
            for (j = 0; j < n; j++) {
                scanf("%d", &matrix[i][j]);
            }
        }
        printf("Matrix must be square matrix\n");
        return 0;
    }

    // Input matrix elements
    printf("Enter elements of matrix:\n");
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    // Check if lower triangular
    for (i = 0; i < m; i++) {
        for (j = i + 1; j < n; j++) {
            if (matrix[i][j] != 0) {
                flag = 0;
                break;
            }
        }
    }

    // Output results
    if (flag)
        printf("Lower triangular matrix\n");
    else
        printf("Not a lower triangular matrix\n");

    return 0;
}
